#!/bin/sh

set -e

line=$(grep "base " /etc/libnss-ldap.conf)
base=$(echo $line | cut -d' ' -f2)
sudoers_base="ou=Roles,"$base
echo $sudoers_base

line=$(grep "host " /etc/libnss-ldap.conf)
host=$(echo $line | cut -d' ' -f2)
uri="URI ldap://"$host":389"
echo $uri


#echo "/etc/libnss-ldap.conf dosyasÄ±na ldap ekleniyor"
sed -i '/ pam_mkhomedir.so skel=/etc/skel umask=0077/c\' /etc/pam.d/common-session
#printf "session required        pam_mkhomedir.so skel=/etc/skel umask=0077" | tee -a /etc/pam.d/common-session
